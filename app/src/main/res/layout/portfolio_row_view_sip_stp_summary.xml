                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="₹ 80,000"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.application.alphacapital.superapp.pms.views.BoldTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NAV"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="14sp"/>

            <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                android:id="@+id/txtSSTotalNav"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="₹ 80,000"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.application.alphacapital.superapp.pms.views.BoldTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Gain/Loss"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="14sp"/>

            <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                android:id="@+id/txtSSTotalGainLoss"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="₹ 80,000"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <com.application.alphacapital.superapp.pms.views.BoldTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Annualized"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textSize="14sp"/>

            <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                android:id="@+id/txtSSTotalAnnualisedReturn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="₹ 80,000"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>