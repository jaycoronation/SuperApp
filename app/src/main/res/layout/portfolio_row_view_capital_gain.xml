<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.application.alphacapital.superapp.pms.views.BoldTextView
        android:id="@+id/txtCGTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@color/light_blue_new"
        android:textColor="@color/blue_new"
        android:text="Debt"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCGScheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/llCGMainTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:gravity="center"
        android:background="@drawable/portfolio_blue_dark_gradient_new"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.application.alphacapital.superapp.pms.views.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purchase Amount"
                android:layout_gravity="top|center"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

            <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                android:id="@+id/txtCGMainPurchaseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_gravity="top|center"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.application.alphacapital.superapp.pms.views.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sale Amount"
                android:gravity="center"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

            <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                android:id="@+id/txtCGMainSaleAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:gravity="center"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.application.alphacapital.superapp.pms.views.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capital Gain"
                android:gravity="end"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

            <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                android:id="@+id/txtCGMainAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:gravity="end"
                android:textColor="@color/portfolio_white"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>