<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.application.alphacapital.superapp.pms.views.BoldTextView
        android:id="@+id/txtSinceInceptionAsset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_new"
        android:padding="12dp"
        android:text="Debt"
        android:textColor="@color/blue_new"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/llSinceInception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Invested Amount"
                    android:textColor="@color/blue_new"
                    android:textSize="13sp" />

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:id="@+id/txtSIAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1015875385"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gain"
                    android:textColor="@color/blue_new"
                    android:textSize="13sp" />

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:id="@+id/txtSIGain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1015875385"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:orientation="vertical">

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abs Return"
                    android:textColor="@color/blue_new"
                    android:textSize="13sp" />

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:id="@+id/txtSIReturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="₹ 80,000"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Value"
                    android:textColor="@color/blue_new"
                    android:textSize="13sp" />

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:id="@+id/txtSICurrentValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1015875385"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XIRR"
                    android:textColor="@color/blue_new"
                    android:textSize="13sp" />

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:id="@+id/txtSIXirr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="₹ 80,000"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:orientation="vertical">

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textColor="@color/blue_new"
                    android:textSize="13sp" />

                <com.application.alphacapital.superapp.pms.views.SemiBoldTextView
                    android:id="@+id/txtSIDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="₹ 80,000"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/blue_new"/>

</LinearLayout>