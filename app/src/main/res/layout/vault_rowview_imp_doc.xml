<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/light_blue_new"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_bold"
                        android:text="Holder Name"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_bold"
                        android:text=":"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtHolderName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_bold"
                        android:text=""
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_regular"
                        android:text="Document Name"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_regular"
                        android:text=":"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtDocumentName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_regular"
                        android:text=""
                        android:layout_marginTop="4dp"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_regular"
                        android:text="Original Location"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_regular"
                        android:text=":"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vault_regular"
                        android:text=""
                        android:layout_marginTop="4dp"
                        android:textColor="@color/vault_black"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/vault_circle_gray"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="9dp"
                    android:src="@drawable/vault_ic_edit_gray"
                    app:tint="@color/vault_black" />

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/vault_circle_gray"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/vault_ic_delete_black"
                    app:tint="@color/vault_black" />

                <ImageView
                    android:id="@+id/ivDownload"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/vault_circle_gray"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/vault_ic_download"
                    app:tint="@color/vault_black" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
