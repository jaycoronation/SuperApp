<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/light_blue_new"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vault_semibold"
                android:layout_marginRight="75dp"
                android:text="Stock Shares"
                android:textColor="@color/vault_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vault_regular"
                android:text="Coronation Solutions"
                android:textColor="@color/vault_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtApproximateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vault_regular"
                android:text="Jay Raval"
                android:textColor="@color/vault_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vault_regular"
                android:text="1211245124"
                android:textColor="@color/vault_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtDocumentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vault_regular"
                android:text="Jay Raval"
                android:textColor="@color/vault_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vault_regular"
                android:text="1234567892"
                android:textColor="@color/vault_black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/vault_circle_gray"
                android:padding="9dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/vault_ic_edit_gray"
                app:tint="@color/vault_black" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/vault_circle_gray"
                android:padding="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/vault_ic_delete_black"
                app:tint="@color/vault_black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
